{
    "name": "mf/symfony-console-subscriber",
    "description": "Console Subscriber for Symfony Console",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Petr Chromec",
            "email": "mortal_flesh@seznam.cz"
        }
    ],
    "autoload": {
        "psr-4": {
            "MF\\ConsoleSubscriber\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MF\\ConsoleSubscriber\\": "tests/"
        }
    },
    "require": {
        "php": "^8.0",
        "symfony/console": "^5.0",
        "symfony/event-dispatcher": "^5.0"
    },
    "require-dev": {
        "lmc/coding-standard": "^3.0",
        "mockery/mockery": "^1.4",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan": "^0.12.83",
        "phpstan/phpstan-mockery": "^0.12.13",
        "phpstan/phpstan-phpunit": "^0.12.18",
        "phpunit/phpunit": "^9.5"
    },
    "config": {
        "bin-dir": "bin",
        "sort-packages": true
    },
    "scripts": {
        "all": [
            "@analyze",
            "@tests-ci"
        ],
        "analyze": [
            "@cs",
            "@phpstan"
        ],
        "cs": "bin/ecs check --ansi -- src/ tests/",
        "phpstan": "bin/phpstan analyze src tests -c phpstan.neon --ansi --level 7",
        "tests": "bin/phpunit",
        "tests-ci": "php -dxdebug.coverage_enable=1 bin/phpunit -c phpunit.xml.dist",
        "fix": [
            "bin/ecs check --ansi --clear-cache --fix -- src/ tests/"
        ]
    }
}
